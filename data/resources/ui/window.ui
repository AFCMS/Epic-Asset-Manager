<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <menu id="primary_menu">
        <section>
            <item>
                <attribute name="label" translatable="yes">_Preferences</attribute>
                <attribute name="action">app.preferences</attribute>
            </item>
            <item>
                <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
                <attribute name="action">win.show-help-overlay</attribute>
            </item>
            <item>
                <attribute name="label" translatable="yes">_About</attribute>
                <attribute name="action">app.about</attribute>
            </item>
        </section>
    </menu>
    <template class="EpicAssetManagerWindow" parent="GtkApplicationWindow">
        <property name="default-width">800</property>
        <property name="default-height">400</property>
        <child>
            <object class="GtkStack" id="main_stack">
                <property name="transition-type">crossfade</property>
                <child>
                    <object class="GtkStackPage">
                        <property name="name">progress</property>
                        <property name="title" translatable="yes">progress</property>
                        <property name="child">
                            <object class="GtkBox" id="progress">
                                <property name="can-focus">0</property>
                                <property name="halign">center</property>
                                <property name="spacing">10</property>
                                <property name="valign">center</property>
                                <child>
                                    <object class="GtkSpinner">
                                        <property name="spinning">True</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel" id="progress_message">
                                        <property name="label" translatable="yes">Loading</property>
                                    </object>
                                </child>
                            </object>
                        </property>
                    </object>
                </child>
                <child>
                    <object class="GtkStackPage">
                        <property name="name">logged_in_stack</property>
                        <property name="title" translatable="yes">logged_in_stack</property>
                        <property name="child">
                            <object class="EpicLoggedInBox" id="logged_in_stack"/>
                        </property>
                    </object>
                </child>
                <child>
                    <object class="GtkStackPage">
                        <property name="name">sid_box</property>
                        <property name="title" translatable="yes">sid_box</property>
                        <property name="child">
                            <object class="SidBox" id="sid_box"/>
                        </property>
                    </object>
                </child>
                <child>
                    <object class="GtkStackPage">
                        <property name="name">download_manager</property>
                        <property name="title" translatable="yes">download_manager</property>
                        <property name="child">
                            <object class="EpicDownloadManager" id="download_manager"/>
                        </property>
                    </object>
                </child>
            </object>
        </child>
        <child type="titlebar">
            <object class="GtkHeaderBar" id="headerbar">
                <property name="can-focus">0</property>
                <child type="title">
                    <object class="GtkBox">
                        <property name="can-focus">0</property>
                        <property name="hexpand">1</property>
                        <property name="homogeneous">1</property>
                        <child>
                            <object class="GtkBox" id="title_left_box">
                                <property name="can-focus">0</property>
                                <property name="halign">start</property>
                                <child>
                                    <placeholder/>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="GtkBox" id="title_center_box">
                                <property name="can-focus">0</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="hexpand">1</property>
                                        <property name="can-focus">0</property>
                                        <property name="label" translatable="yes">Epic Asset Manager</property>
                                        <property name="justify">center</property>
                                        <property name="ellipsize">middle</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkBox" id="title_right_box">
                                <property name="can-focus">0</property>
                                <property name="halign">end</property>
                                <child type="end">
                                    <object class="GtkMenuButton" id="appmenu_button">
                                        <property name="icon-name">open-menu-symbolic</property>
                                        <property name="menu-model">primary_menu</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>
